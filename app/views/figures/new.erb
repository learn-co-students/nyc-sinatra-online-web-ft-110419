<h2>Create New Figure</h2>

<form method="POST" action="/figures">
  <label for="figure[name]">Name:</label>
  <input type="text" id="figure_name" name="figure[name]">
  
  <h4>Titles</h4>
  <% Title.all.each do |title| %>
    <label for="figure[title_ids][]"><%=title.name%></label>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>">
  <% end %>
  
  <h4>Create New Title:</h4>
  <input type="text" id="new_title" name="title[name]">
  
  <h4>Landmarks</h4>
  <% Landmark.all.each do |landmark| %>
    <label for="figure[landmark_ids][]"><%=landmark.name%></label>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]"
    value="<%=landmark.id%>">
  <% end %>
  
  <h4>Create New Landmark:</h4>
  <label for="landmark[name]">Name:</label>
  <input id="new_landmark" type="text" name="landmark[name]">
  
  <label for="landmark[year_completed]">Year:</label>
  <input id="landmark_year_completed" type="text" name="landmark[year_completed]">
  
  <input type="submit" value="Create New Figure">
</form>
