<form method="POST" action="/figures" >
    <label>Name</label>
    <input type="text" name="figure[name]" id="figure_name" placeholder="Figure Name"><br>

    <label>Titles</label><br>
    <% Title.all.each do |title| %>
        <label><%= title.name %></label>
        <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>
    <% end %> 

    <label>Create New Title:</label>
    <input type="text" id="new_title" name="title[name]"><br>

    <label>Landmarks</label><br>
    <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %></label>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%= landmark.id %>"><br>
    <% end %> 

    <label>Create New Landmark:</label><br>
    <label>Name</label>
        <input type="text" id="new_landmark" name="landmark[name]"><br>
        <label>Year:</label>
        <input type="text" name="landmark[year_completed]" placeholder="Landmark Year"><br>

        <input type="submit" value="Create New Figure">
</form>
