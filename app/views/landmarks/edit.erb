<h2>Edit Historical Landmark</h2>

<!-- add content here -->

<form method="POST" action="/landmarks/<%=@landmark.id%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  
  <label for="landmark[name]">Name:</label>
  <input id="name" type="text" name="landmark[name]" value="<%=@landmark.name%>">
  
  <label for="landmark[year_completed]">Year:</label>
  <input id="year_completed" type="text" name="landmark[year_completed]"
  value="<%=@landmark.year_completed%>">
  
  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
